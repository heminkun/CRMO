			</if>
 		 </set>
 		 where cust_level_id=#{custLevelId}
	</update>

	<!-- 根据CustLevelId删除-->
	<delete id="deleteByCustLevelId">
		delete from cst_level where cust_level_id=#{custLevelId}
	</delete>

	<!-- 根据PrimaryKey获取对象-->
	<select id="selectByCustLevelId" resultMap="base_result_map" >
		select <include refid="base_column_list" /> from cst_level where cust_level_id=#{custLevelId}
	</select>

	<select id="selectAll" resultMap="base_result_map">
