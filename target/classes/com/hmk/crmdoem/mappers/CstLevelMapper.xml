		 </foreach>
			on DUPLICATE key update 
			cust_level_name = VALUES(cust_level_name),
			cust_level = VALUES(cust_level),
			cust_amount = VALUES(cust_amount)
	</insert>

	<!-- 根据CustLevelId修改-->
	<update id="updateByCustLevelId" parameterType="com.hmk.crmdoem.entity.po.CstLevel">
		 UPDATE cst_level
 		 <set> 
			<if test="bean.custLevelName != null">
				 cust_level_name = #{bean.custLevelName},
			</if>
			<if test="bean.custLevel != null">
				 cust_level = #{bean.custLevel},
			</if>
			<if test="bean.custAmount != null">
