	</resultMap>


	<!-- 通用查询结果列-->
	<sql id="base_column_list">
		 atv_id,atv_cust_no,atv_cust_name,atv_date,atv_place,
		 atv_title,atv_desc
	</sql>

	<sql id="base_condition_filed">
			<if test="query.atvId != null">
				 and  atv_id = #{query.atvId}
			</if>
			<if test="query.atvCustNo != null and query.atvCustNo!=''">
				 and  atv_cust_no = #{query.atvCustNo}
			</if>
			<if test="query.atvCustName != null and query.atvCustName!=''">
				 and  atv_cust_name = #{query.atvCustName}
			</if>
			<if test="query.atvDate != null and query.atvDate!=''">
				 <![CDATA[ and  atv_date=str_to_date(#{query.atvDate}, '%Y-%m-%d') ]]>
			</if>
			<if test="query.atvPlace != null and query.atvPlace!=''">
				 and  atv_place = #{query.atvPlace}
			</if>
			<if test="query.atvTitle != null and query.atvTitle!=''">
				 and  atv_title = #{query.atvTitle}
			</if>
			<if test="query.atvDesc != null and query.atvDesc!=''">
				 and  atv_desc = #{query.atvDesc}
			</if>
	</sql>
	<!-- 通用条件列-->
	<sql id="base_condition">
	 <where>
		 <include refid="base_condition_filed" />
	 </where>
	</sql>

	<!-- 通用查询条件列-->
	<sql id="query_condition">
	 <where>
			<include refid="base_condition_filed" />
			<if test="query.atvCustNoFuzzy!= null  and query.atvCustNoFuzzy!=''">
				 and  atv_cust_no like concat('%', #{query.atvCustNoFuzzy}, '%')
			</if>
			<if test="query.atvCustNameFuzzy!= null  and query.atvCustNameFuzzy!=''">
				 and  atv_cust_name like concat('%', #{query.atvCustNameFuzzy}, '%')
			</if>
			<if test="query.atvDateStart!= null and query.atvDateStart!=''">
				 <![CDATA[ and  atv_date>=str_to_date(#{query.atvDateStart}, '%Y-%m-%d') ]]>
			</if>
			<if test="query.atvDateEnd!= null and query.atvDateEnd!=''">
				 <![CDATA[ and  atv_date< date_sub(str_to_date(#{query.atvDateEnd},'%Y-%m-%d'),interval -1 day) ]]>
			</if>
			<if test="query.atvPlaceFuzzy!= null  and query.atvPlaceFuzzy!=''">
				 and  atv_place like concat('%', #{query.atvPlaceFuzzy}, '%')
			</if>
			<if test="query.atvTitleFuzzy!= null  and query.atvTitleFuzzy!=''">
				 and  atv_title like concat('%', #{query.atvTitleFuzzy}, '%')
			</if>
			<if test="query.atvDescFuzzy!= null  and query.atvDescFuzzy!=''">
				 and  atv_desc like concat('%', #{query.atvDescFuzzy}, '%')
			</if>
	 </where>
	</sql>

	<!-- 查询集合-->
	<select id="selectList" resultMap="base_result_map" >
		 SELECT <include refid="base_column_list" /> FROM cst_activity <include refid="query_condition" />
		 <if test="query.orderBy!=null">
			 order by ${query.orderBy}
		 </if>
		 <if test="query.simplePage!=null">
			 limit #{query.simplePage.start},#{query.simplePage.end}
		 </if>
	</select>

	<!-- 查询数量-->
	<select id="selectCount" resultType="java.lang.Integer" >
		 SELECT count(1) FROM cst_activity <include refid="query_condition" />
	</select>

